
<div id = "form">
<%= form_for :quote, url: quotes_path, remote: true do |f| %>
   
 <p>
    <%= f.label :author, "Укажите автора высказывания" %><br>
    <%= f.text_field :author, :class => "form-control" %>
  </p>
 
  <p>
    <%= f.label :text, "Введите высказывание" %><br>
    <%= f.text_area :text, :class => "form-control" %>
  </p>
 
  <p>
    <%= f.submit "Сохранить", :class => 'btn btn-success btn-green' %>
  </p>
<% end %>
</div>