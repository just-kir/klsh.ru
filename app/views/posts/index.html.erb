<header class="intro-header" style="background-image: url('<%= asset_path("home-bg.jpg")%>')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1><%= days_left_to_klsh%> <%= get_numending(days_left_to_klsh)%></h1>
                        <hr class="small">
                        <span class="subheading">осталось до начала нового сезона</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
<% if user_signed_in? %>
  <%= link_to 'New post', new_post_path %>
<% end %> 
<div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

<% @posts.each do |post| %> 
  <% if post.title? %>
    <h2><%= link_to post.title, post_path(post) %></h2>
  <% else %>
      <h2> Без темы </h2>
  <% end %>
    
    <small><em><%= post.timestamp %></em></small>

    <p>
      <%= post.text.html_safe %> 
    </p>
    <% if user_signed_in? %>
    <%= link_to 'Show', post_path(post) %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
                    
    <% end %>                
    <hr>
    <br>

<% end %>

</div>
</div>
</div>

<%= will_paginate @posts%>

