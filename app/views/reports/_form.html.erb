<div id = "form">
<%= form_for :report, url: reports_path, remote: true do |f| %>
   
  <p>
    <%= f.label :name, "Представьтесь" %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </p>

  <p>
    <%= f.label :text, "Введите текст" %><br>
    <%= f.text_area :text,  :class => "form-control" %>
  </p>
 
  <p>
    <%= f.submit 'Сохранить', :class => 'btn btn-success btn-green' %>
  </p>
<% end %>
</div>