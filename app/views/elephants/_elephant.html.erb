<%= form_for :elephant, remote: true, url: elephants_path do |f| %>
  <br>
  <div class="panel panel-default">
    <div class="panel-heading">
    <h3 class="panel-title">
      <%= elephant.author %>,
      <a href= <%= url(elephant.link) %> style="color: #428bca">
      <u><%= elephant.title %></u> </a>
      
      </h3>

    </div>
    <div class="panel-body">
      <p><%= markdown(elephant.description) %></p> <br>
      Цена: 
      <span style="color: #b12704;"> <b><%= elephant.price %> руб.</b></span>
      <hr>
      <div class="col-md-6">

      <%if elephant.big == true%> 
      <u style ="text-decoration: none"><span class="label label-danger">Большой</span></u>
      <%end%>
      <%if elephant.medium == true%> 
      <u style ="text-decoration: none"><span class="label label-success">Средний</span></u>
      <%end%>
      <%if elephant.small == true%> 
      <u style ="text-decoration: none"><span class="label label-default">Малый</span></u>
      <%end%>
      
      <br>
      <%if elephant.ntn == true%> 
      <u style ="text-decoration: none"><span class="label label-primary">НТН</span></u>
      <%end%>
      <%if elephant.nen == true%> 
      <u style ="text-decoration: none"><span class="label label-success">НЕН</span></u>
      <%end%>
      <%if elephant.non == true%> 
      <u style ="text-decoration: none"><span class="label label-warning">НОН</span></u>
      <%end%>
      <%if elephant.nfn == true%> 
      <u style ="text-decoration: none"><span class="label label-info">НФН</span></u>
      <%end%>
      </div>
      <div class="col-md-6">
      <br>
      <p align="right">
        <b><%= elephant.name %></b>
        <% s = "Комментарии (" + (elephant.comment2s.count).to_s + ")" %>
        <%= link_to s, elephant_path(elephant) %>
        <%= link_to 'Edit', edit_elephant_path(elephant) %>
        <%= link_to 'Destroy', elephant_path(elephant),
        method: :delete, data: { confirm: 'Уверены?' } %>
      </p>
      </div>
    </div>
  </div>
  <hr>  
<% end %>