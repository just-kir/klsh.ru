<div id = "form">
<%= form_for :elephant, url: elephants_path, remote: true do |f| %>
   
  <p>
    <%= f.label :name, "Представьтесь" %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </p>
 
  <p>
    <%= f.label :link, "Дайте ссылку на ozon.ru или похожий ресурс" %><br>
    <%= f.text_field :link, :class => "form-control" %>
  </p>
  <br>
  <%= f.label "Каким направлениям подойдет?" %><br>
  <table class="table table-bordered"  style="width:40%">
    <tr class="active">
      <td><%= f.label "НТН" %></td>
      <td><%= f.label "НЕН" %></td>
      <td><%= f.label "НОН" %></td>
      <td><%= f.label "НФН" %></td>
    </tr>
    <tr>  
      <td><%= f.check_box :ntn %></td>
      <td><%= f.check_box :nen %></td>
      <td><%= f.check_box :non %></td> 
      <td><%= f.check_box :nfn %></td>
    </tr>
  </table>

 <%= f.label "Какой это слон?" %><br>
  <table class="table table-bordered"  style="width:40%">
    <tr class="active">
      <td><%= f.label "Большой" %></td>
      <td><%= f.label "Средний" %></td>
      <td><%= f.label "Малый" %></td>
    </tr>
    <tr>  
      <td><%= f.check_box :big %></td>
      <td><%= f.check_box :medium %></td>
      <td><%= f.check_box :small %></td> 
    </tr>
  </table>

  <p>
    <%= f.label :author, "Укажите автора книги" %><br>
    <%= f.text_field :author, :class => "form-control" %>
  </p>

  <p>
    <%= f.label :title, "Укажите название книги" %><br>
    <%= f.text_field :title, :class => "form-control" %>
  </p>
 
  <p>
    <%= f.label :price, "Укажите цену книги в рублях (только число)" %><br>
    <%= f.text_field :price, :class => "form-control" %>
  </p>

  <p>
    <%= f.label :description, "Дайте короткое описание" %><br>
    <%= f.text_area :description, :class => "form-control" %>
  </p>
 
  <p>
    <%= f.submit 'Сохранить', :class => 'btn btn-success btn-green'%>
  </p>
<% end %>
</div>