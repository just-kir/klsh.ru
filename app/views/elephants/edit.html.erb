<h1>Editing</h1>

<%= form_for :elephant, url: elephant_path(@elephant), method: :patch do |f| %>
  <% if @elephant.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@elephant.errors.count, "error") %> prohibited
      this record from being saved:</h2>
    <ul>
    <% @elephant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  
  <% end %>

  <p>
    <%= f.label :name, "Имя" %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </p>
 
  <p>
    <%= f.label :link, "Ссылка на ozon.ru или похожий ресурс" %><br>
    <%= f.text_field :link, :class => "form-control" %>
  </p>
  <br>
  <%= f.label "Каким направлениям подойдет?" %><br>
  <table class="table table-bordered"  style="width:40%">
    <tr class="active">
      <td><%= f.label "НТН" %></td>
      <td><%= f.label "НЕН" %></td>
      <td><%= f.label "НОН" %></td>
      <td><%= f.label "НФН" %></td>
    </tr>
    <tr>  
      <td><%= f.check_box :ntn %></td>
      <td><%= f.check_box :nen %></td>
      <td><%= f.check_box :non %></td> 
      <td><%= f.check_box :nfn %></td>
    </tr>
  </table>

  <%= f.label "Какой это слон?" %><br>
  <table class="table table-bordered"  style="width:40%">
    <tr class="active">
      <td><%= f.label "Большой" %></td>
      <td><%= f.label "Средний" %></td>
      <td><%= f.label "Малый" %></td>
    </tr>
    <tr>  
      <td><%= f.check_box :big %></td>
      <td><%= f.check_box :medium %></td>
      <td><%= f.check_box :small %></td> 
    </tr>
  </table>

  <p>
    <%= f.label :author, "Автор книги" %><br>
    <%= f.text_field :author, :class => "form-control" %>
  </p>

  <p>
    <%= f.label :title, "Название книги" %><br>
    <%= f.text_field :title, :class => "form-control" %>
  </p>
 
  <p>
    <%= f.label :price, "Цена книги в рублях (только число)" %><br>
    <%= f.text_field :price, :class => "form-control" %>
  </p>


  <p>
    <%= f.label :description, "Короткое описание" %><br>
    <%= f.text_area :description, :class => "form-control" %>
  </p>
 
  <p>
    <%= f.submit 'Сохранить', :class => 'btn btn-success btn-green'%>
  </p>
<% end %>