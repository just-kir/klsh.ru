<%= form_for([@doc, @doc.comment4s.build]) do |f| %>
  <p>
    <%= f.label :commenter, "Представьтесь" %><br />
    <%= f.text_field :commenter,  :class => "form-control" %>
  </p>
  <p>
    <%= f.label :body, "Введите текст" %><br />
    <%= f.text_area :body,  :class => "form-control" %>
  </p>
  <p>
    <%= f.submit 'Сохранить', :class => 'btn btn-success btn-green'%>
  </p>
<% end %>